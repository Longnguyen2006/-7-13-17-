//начинаем
   For i = 0 to msg[i] != '\0'
      ch = msg[i]
   // расшифровываем строчные буквы
      if(ch >= 'a' and ch <= 'z')
         ch = ch - key
         if (ch < 'a')
            ch = ch +'z' - 'a' + 1
  
      msg[i] = ch
  // расшифровываем заглавные буквы
      else if (ch >= 'A' and ch <= 'Z')
         ch = ch + key
         if (ch < 'A')
            ch = ch + 'Z' - 'A' + 1
        
         msg[i] = ch
// Распечатаем расшифрованное сообщение и конец
